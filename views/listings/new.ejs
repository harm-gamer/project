<%- layout('/listings/layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <h3>Create a New Listing</h3>
      <div class="mp-3 col-4">
        <label for="title" class="form-label" >title</label>
        <input name="listing[title]" placeholder="enter title" class="form-control" type="text" required/>
        <div class="invalid-feedback">Enter tittle</div>
      </div>
         <div class="mp-3">
          <label for="description" class="form-label">description</label>
          <textarea
        name="listing[description]"
        placeholder="enter description " class="form-control" required    
      ></textarea>
        <div class="invalid-feedback">please enter 20 characters</div>
         </div>
           <div class="mp-3">
            <label for="image" class="form-label">Upload a image</label>
            <input
            name="listing[image]"
             class="form-control"
            type="file" required
          />
          <div class="invalid-feedback">Upload a File</div>
           </div> 
           <div class="row ">
           <div class="mp-3 col-md-4" >
            <label for="price" class="form-label">price</label>
            <input name="listing[price]" placeholder="enter price" class="form-control" required/>
            <div class="invalid-feedback">Enter a number</div>

           </div>
         
       
         <div class="mp-3 col-md-8" >
          <label for="country" class="form-label">country</label>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
          <div class="invalid-feedback">Enter country name</div>
         </div>
        </div>
         <div class="mp-3">
          <label for="location" class="form-label">location</label>
          <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control" required
      />
         </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
    </form>
    </div>
  </div>
